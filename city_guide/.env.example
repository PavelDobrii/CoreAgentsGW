# ----------------------------------------------------------------------------
# Database
# ----------------------------------------------------------------------------
# Для PyCharm/локальной отладки удобнее использовать SQLite:
# DATABASE_URL=sqlite+aiosqlite:///./dev/cityguide.db
#
# Для Docker/production оставьте подключение к PostgreSQL:
DATABASE_URL=postgresql://postgres:postgres@db:5432/cityguide

# Логирование SQL (True/False)
ECHO_SQL=false

# ----------------------------------------------------------------------------
# GPT
# ----------------------------------------------------------------------------
OPENAI_API_KEY=sk-...
GPT_MODEL=chatgpt-4o-latest

# ----------------------------------------------------------------------------
# Google
# ----------------------------------------------------------------------------
GOOGLE_MAPS_API_KEY=...
USE_GOOGLE_SOURCES=true
PLACES_RADIUS_M=2500
PLACES_MAX_RESULTS=20

# ----------------------------------------------------------------------------
# App
# ----------------------------------------------------------------------------
APP_HOST=0.0.0.0
APP_PORT=8000
